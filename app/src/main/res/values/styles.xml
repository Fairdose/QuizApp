<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#263238</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="QuizAppTheme" parent="Theme.AppCompat">
        <item name="android:background">#CFD8DC</item>
    </style>

    <style name="time_header">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">#3f5c6b</item>
    </style>

    <style name="question_theme">
        <item name="android:background">@drawable/radius_border</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="question_text">
        <item name="android:textColor">#121212</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="answer_theme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#3D3D3D</item>
    </style>

    <style name="placeholder_theme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="submit_button_theme">
        <item name="android:background">#37474F</item>
        <item name="android:textColor">#ECEFF1</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:capitalize">none</item>
    </style>

</resources>
